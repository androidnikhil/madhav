<style>
    /* Initial states for animations */
    #animated-footer {
        opacity: 0;
    }

    #footer-cta,
    #footer-company,
    #footer-links,
    #footer-services,
    #footer-contact,
    #footer-bottom {
        opacity: 0;
        transform: translateY(30px);
    }

    /* FORCE SINGLE COLUMN LAYOUT */
    .footer-sections-wrapper {
        display: flex !important;
        flex-direction: column !important;
        gap: 2rem !important;
    }

    /* Only allow grid on very large screens */
    @media (min-width: 1280px) {
        .footer-sections-wrapper {
            display: grid !important;
            grid-template-columns: repeat(4, 1fr) !important;
            gap: 2rem !important;
        }
    }

    /* Floating background shapes */
    .floating-shape {
        animation: float 6s ease-in-out infinite;
    }

    .floating-shape:nth-child(2) {
        animation-delay: -2s;
    }

    .floating-shape:nth-child(3) {
        animation-delay: -4s;
    }

    .floating-shape:nth-child(4) {
        animation-delay: -1s;
    }

    @keyframes float {
        0,
        100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    /* Footer link hover effects */
    .footer-link::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -2px;
        left: 0;
        background-color: #3EABBF;
        transition: width 0.3s ease;
    }

    .footer-link:hover::after {
        width: 100%;
    }

    /* Social icon hover effects */
    .social-icon {
        position: relative;
        overflow: hidden;
    }

    .social-icon::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }

    .social-icon:hover::before {
        left: 100%;
    }

    /* CTA Button special effect */
    #footer-cta-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
        transition: left 0.6s;
    }

    #footer-cta-button:hover::before {
        left: 100%;
    }

    /* Scroll to top button */
    #scroll-to-top {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    #scroll-to-top.show {
        opacity: 1;
        pointer-events: auto;
    }

    /* Responsive adjustments */
    @media(max-width: 768px) {
        .floating-shape {
            display: none;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () { // GSAP Footer Animations
if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
gsap.registerPlugin(ScrollTrigger);

// Footer entrance animation
gsap.timeline({
scrollTrigger: {
trigger: "#animated-footer",
start: "top 90%",
end: "bottom 20%",
toggleActions: "play none none reverse"
}
}).to("#animated-footer", {
opacity: 1,
duration: 0.4,
ease: "power2.out"
}).to("#footer-cta", {
opacity: 1,
y: 0,
duration: 0.4,
ease: "back.out(1.7)"
}, "-=0.4").to([
"#footer-company", "#footer-links", "#footer-services", "#footer-contact"
], {
opacity: 1,
y: 0,
duration: 0.3,
stagger: 0.2,
ease: "power3.out"
}, "-=0.4").to("#footer-bottom", {
opacity: 1,
y: 0,
duration: 0.3,
ease: "power2.out"
}, "-=0.2");

// Social icons hover animation
document.querySelectorAll('.social-icon').forEach(icon => {
icon.addEventListener('mouseenter', () => {
gsap.to(icon, {
scale: 1.2,
rotation: 360,
duration: 0.2,
ease: "back.out(1.7)"
});
});

icon.addEventListener('mouseleave', () => {
gsap.to(icon, {
scale: 1,
rotation: 0,
duration: 0.2,
ease: "power2.out"
});
});
});

} else { // Fallback without GSAP
document.getElementById('animated-footer').style.opacity = '1';
document.querySelectorAll('#footer-cta, #footer-company, #footer-links, #footer-services, #footer-contact, #footer-bottom').forEach(el => {
el.style.opacity = '1';
el.style.transform = 'translateY(0)';
});
}

// Scroll to top functionality
const scrollToTopBtn = document.getElementById('scroll-to-top');

window.addEventListener('scroll', () => {
if (window.pageYOffset > 300) {
scrollToTopBtn.classList.add('show');
} else {
scrollToTopBtn.classList.remove('show');
}
});

scrollToTopBtn.addEventListener('click', () => {
window.scrollTo({ top: 0, behavior: 'smooth' });
});

});
</script>
