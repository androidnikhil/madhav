<script>
	// Register GSAP plugins
gsap.registerPlugin(ScrollTrigger);

// Initialize the application
document.addEventListener('DOMContentLoaded', function () {
initServiceCardEffects();
});

// Service card 3D tilt effects
function initServiceCardEffects() {
const serviceCards = document.querySelectorAll('.service-card');

serviceCards.forEach(card => {
card.addEventListener('mouseenter', function (e) {
gsap.to(card, {
rotationX: 5,
rotationY: 5,
scale: 1.02,
duration: 0.3,
ease: "power2.out",
transformPerspective: 1000,
transformOrigin: "center center"
});
});

card.addEventListener('mousemove', function (e) {
const rect = card.getBoundingClientRect();
const x = e.clientX - rect.left;
const y = e.clientY - rect.top;
const centerX = rect.width / 2;
const centerY = rect.height / 2;

const rotateX = (y - centerY) / 10;
const rotateY = (centerX - x) / 10;

gsap.to(card, {
rotationX: rotateX,
rotationY: rotateY,
duration: 0.3,
ease: "power2.out"
});
});

card.addEventListener('mouseleave', function () {
gsap.to(card, {
rotationX: 0,
rotationY: 0,
scale: 1,
duration: 0.5,
ease: "power2.out"
});
});
});

// Process card hover effects
const processCards = document.querySelectorAll('.process-card');
processCards.forEach(card => {
card.addEventListener('mouseenter', function () {
gsap.to(card, {
y: -8,
duration: 0.3,
ease: "power2.out"
});

const number = card.querySelector('.process-number');
gsap.to(number, {
scale: 1.1,
duration: 0.3,
ease: "back.out(1.7)"
});
});

card.addEventListener('mouseleave', function () {
gsap.to(card, {
y: 0,
duration: 0.3,
ease: "power2.out"
});

const number = card.querySelector('.process-number');
gsap.to(number, {
scale: 1,
duration: 0.3,
ease: "power2.out"
});
});
});
}


// Button click animations
document.addEventListener('click', function (e) {
if (e.target.classList.contains('btn')) {
gsap.fromTo(e.target, {
scale: 1
}, {
scale: 0.95,
duration: 0.1,
yoyo: true,
repeat: 1,
ease: "power2.inOut"
});
}
});

// CTA button actions
document.addEventListener('click', function (e) {
if (e.target.textContent === 'Explore Services') {
e.preventDefault();
gsap.to(window, {
duration: 1,
scrollTo: {
y: document.querySelector('.services'),
offsetY: 80
},
ease: "power2.inOut"
});
}

if (e.target.textContent === 'Get Proposal') {
e.preventDefault();
gsap.to(window, {
duration: 1,
scrollTo: {
y: document.querySelector('.contact'),
offsetY: 80
},
ease: "power2.inOut"
});
}
});

// Performance optimization: Reduce animation frequency on mobile
function isMobile() {
return window.innerWidth<= 768;
}

// Adjust animations for mobile devices
if (isMobile()) {
    ScrollTrigger.config({ limitCallbacks: true });
    
    // Keep service card animations but reduce intensity on mobile
    const serviceCards = document.querySelectorAll('.service-card');
    serviceCards.forEach(card => {
card.addEventListener('touchstart', function () {
gsap.to(card, {
scale: 0.98,
duration: 0.1,
ease: "power2.out"
});
});

card.addEventListener('touchend', function () {
gsap.to(card, {
scale: 1,
duration: 0.2,
ease: "power2.out"
});
});
}
);
}

// Resize handler for responsive behavior
window.addEventListener('resize', function () {
ScrollTrigger.refresh();
});

// Preloader animation (if needed)
window.addEventListener('load', function () {
gsap.to('body', {
opacity: 1,
duration: 0.5,
ease: "power2.out"
});
});
</script>
