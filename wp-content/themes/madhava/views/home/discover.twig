<script>
document.addEventListener('DOMContentLoaded', function() {
    // Check if GSAP is available
    if (typeof gsap !== 'undefined') {
        
        // Register ScrollTrigger if available
        if (typeof ScrollTrigger !== 'undefined') {
            gsap.registerPlugin(ScrollTrigger);
        }

        // Set initial states
        gsap.set('#discover-heading', { opacity: 0, y: 50, scale: 0.9 });
        gsap.set('#discover-paragraph', { opacity: 0, y: 30, scale: 0.95 });
        gsap.set('#discover-cta-button', { opacity: 0, y: 20, scale: 0.8 });
        gsap.set('.wave-1, .wave-2, .wave-3, .wave-4, .wave-5', { x: 100, opacity: 0.5 });
        gsap.set('.wave-6, .wave-7, .wave-8, .wave-9, .wave-10', { x: -100, opacity: 0.5 });

        // Main timeline with ScrollTrigger
        const discoverTL = gsap.timeline({
            scrollTrigger: {
                trigger: 'section',
                start: 'top 80%',
                end: 'bottom 20%',
                toggleActions: 'play none none reverse',
                // markers: true, // uncomment for debugging
            }
        });

        // Content animation sequence
        discoverTL
            .to('#discover-heading', {
                opacity: 1,
                y: 0,
                scale: 1,
                duration: 1.2,
                ease: 'power3.out'
            })
            .to('#discover-paragraph', {
                opacity: 1,
                y: 0,
                scale: 1,
                duration: 1,
                ease: 'power2.out'
            }, '-=0.8')
            .to('#discover-cta-button', {
                opacity: 1,
                y: 0,
                scale: 1,
                duration: 0.8,
                ease: 'back.out(1.7)'
            }, '-=0.6')
            .to('.wave-1, .wave-2, .wave-3, .wave-4, .wave-5', {
                x: 0,
                opacity: 0.9,
                duration: 1.5,
                stagger: 0.1,
                ease: 'power2.out'
            }, '-=1.2')
            .to('.wave-6, .wave-7, .wave-8, .wave-9, .wave-10', {
                x: 0,
                opacity: 0.9,
                duration: 1.5,
                stagger: 0.1,
                ease: 'power2.out'
            }, '-=1.4');

        // Continuous wave animations
        const topWaves = document.querySelectorAll('.wave-1, .wave-2, .wave-3, .wave-4, .wave-5');
        const bottomWaves = document.querySelectorAll('.wave-6, .wave-7, .wave-8, .wave-9, .wave-10');

        // Animate top waves (flowing right to left)
        topWaves.forEach((wave, index) => {
            gsap.to(wave, {
                x: -15 + (Math.random() * 10),
                y: -10 + (Math.random() * 8),
                rotation: -2 + (Math.random() * 4),
                duration: 8 + (index * 0.5),
                repeat: -1,
                yoyo: true,
                ease: 'sine.inOut',
                delay: index * 0.2
            });
        });

        // Animate bottom waves (flowing left to right)
        bottomWaves.forEach((wave, index) => {
            gsap.to(wave, {
                x: 15 + (Math.random() * 10),
                y: 10 + (Math.random() * 8),
                rotation: 2 + (Math.random() * 4),
                duration: 9 + (index * 0.4),
                repeat: -1,
                yoyo: true,
                ease: 'sine.inOut',
                delay: index * 0.3
            });
        });

        // Button hover animation
        const ctaButton = document.getElementById('discover-cta-button');
        if (ctaButton) {
            ctaButton.addEventListener('mouseenter', function() {
                gsap.to(this, {
                    scale: 1.1,
                    y: -3,
                    boxShadow: '0 10px 25px rgba(0,0,0,0.2)',
                    duration: 0.3,
                    ease: 'power2.out'
                });
            });

            ctaButton.addEventListener('mouseleave', function() {
                gsap.to(this, {
                    scale: 1,
                    y: 0,
                    boxShadow: '0 4px 15px rgba(0,0,0,0.1)',
                    duration: 0.3,
                    ease: 'power2.out'
                });
            });
        }

        // Parallax effect for SVG containers
        gsap.to('#top-right-svg', {
            y: -50,
            duration: 20,
            repeat: -1,
            yoyo: true,
            ease: 'sine.inOut'
        });

        gsap.to('#bottom-left-svg', {
            y: 50,
            duration: 25,
            repeat: -1,
            yoyo: true,
            ease: 'sine.inOut'
        });

        // Floating animation for the heading
        gsap.to('#discover-heading', {
            y: -10,
            duration: 4,
            repeat: -1,
            yoyo: true,
            ease: 'sine.inOut',
            delay: 2
        });

    } else {
        // Fallback if GSAP is not loaded
        console.warn('GSAP not loaded - showing content without animations');
        document.getElementById('discover-heading').style.opacity = '1';
        document.getElementById('discover-paragraph').style.opacity = '1';
        document.getElementById('discover-cta-button').style.opacity = '1';
    }
});
</script>
