duration: 0.3,
ease: 'power2.out'
}, '-=0.3').to('.title-line-2', {
x: 0,
opacity: 1,
duration: 0.3,
ease: 'power2.out'
}, '-=0.5').to('.highlight-box', {
scale: 1,
opacity: 1,
rotation: -1,
duration: 0.2,
ease: 'back.out(1.7)'
}, '-=0.3').to('.services-description', {
y: 0,
opacity: 1,
duration: 0.3,
ease: 'power2.out'
}, '-=0.4').to('.services-cta', {
y: 0,
opacity: 1,
scale: 1,
duration: 0.2,
ease: 'back.out(1.7)'
}, '-=0.3').to('.service-card', {
y: 0,
opacity: 1,
scale: 1,
duration: 0.3,
stagger: 0.15,
ease: 'power2.out'
}, '-=0.4');

// Hover animations for service cards - simplified
document.querySelectorAll('.service-card').forEach(card => {
const cardInner = card.querySelector('div');
const image = card.querySelector('.card-image');
const tag = card.querySelector('.service-tag');

card.addEventListener('mouseenter', () => {
gsap.to(card, {
y: -10,
scale: 1.03,
duration: 0.4,
ease: 'power2.out'
});

if (image) {
gsap.to(image, {
scale: 1.1,
duration: 0.5,
ease: 'power2.out'
});
}

if (tag) {
gsap.to(tag, {
y: -3,
scale: 1.05,
duration: 0.3,
ease: 'back.out(1.7)'
});
}
});

card.addEventListener('mouseleave', () => {
gsap.to(card, {
y: 0,
scale: 1,
duration: 0.4,
ease: 'power2.out'
});

if (image) {
gsap.to(image, {
