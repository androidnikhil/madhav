if (typeof ScrollTrigger !== 'undefined') {
gsap.registerPlugin(ScrollTrigger);
}

// Set initial states - much more aggressive hiding
gsap.set('#services-section', {opacity: 0});
gsap.set('.grid-line', {
scaleY: 0,
