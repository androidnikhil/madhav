});
gsap.set('.services-cta', {
y: 30,
opacity: 0,
scale: 0.8
});

// Create timeline for scroll trigger
const tl = gsap.timeline({
scrollTrigger: {
trigger: '#services-section',
start: 'top 85%',
end: 'bottom 20%',
toggleActions: 'play none none reverse',
// markers: true // Uncomment for debugging
}
});

// Animation sequence - step by step
tl.to('#services-section', {
opacity: 1,
duration: 0.1
}).to('.grid-line', {
scaleY: 1,
duration: 0.4,
stagger: 0.2,
ease: 'power2.out'
}, '-=0.2').to('.services-intro', {
x: 0,
