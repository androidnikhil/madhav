<script>
document.addEventListener('DOMContentLoaded', function() {
    // Enrollment popup logic
    const enrollBtn = document.getElementById('enrollNowBtn');
    const popup = document.getElementById('enrollmentPopup');
    const closeBtn = document.getElementById('closePopup');
    const closeSuccessBtn = document.getElementById('closeSuccess');
    const form = document.getElementById('enrollmentForm');
    const formContainer = document.getElementById('formContainer');
    const successMessage = document.getElementById('successMessage');

    if(enrollBtn) {
        enrollBtn.addEventListener('click', function() {
            popup.classList.add('active');
            document.body.style.overflow = 'hidden';
        });
    }

    function closePopup() {
        popup.classList.remove('active');
        document.body.style.overflow = '';
        setTimeout(function() {
            form.reset();
            document.getElementById('courseName').value = '{{ post.title|e('js') }}';
            formContainer.style.display = 'block';
            successMessage.classList.remove('active');
        }, 300);
    }

    if(closeBtn) closeBtn.addEventListener('click', closePopup);
    if(closeSuccessBtn) closeSuccessBtn.addEventListener('click', closePopup);

    popup.addEventListener('click', function(e) {
        if (e.target === popup) {
            closePopup();
        }
    });

    form.addEventListener('submit', function(e) {
        e.preventDefault();
        const formData = new FormData(form);
        const submitBtn = form.querySelector('.enrollment-form__submit');
        submitBtn.disabled = true;
        submitBtn.textContent = 'Submitting...';
        fetch('{{ site.url }}/wp-admin/admin-ajax.php', {
            method: 'POST',
            body: new URLSearchParams({
                action: 'submit_course_enrollment',
                name: formData.get('studentName'),
                email: formData.get('studentEmail'),
                phone: formData.get('studentPhone'),
                address: formData.get('studentAddress'),
                course: formData.get('courseName'),
                nonce: '{{ function('wp_create_nonce', 'enrollment_nonce') }}'
            })
        })
        .then(response => response.json())
        .then(result => {
            if(result.success) {
                formContainer.style.display = 'none';
                successMessage.classList.add('active');
            } else {
                alert(result.data.message || 'There was an error. Please try again.');
            }
            submitBtn.disabled = false;
            submitBtn.textContent = 'Submit Enrollment';
        })
        .catch(error => {
            console.error('Error:', error);
            alert('There was an error submitting your enrollment. Please try again.');
            submitBtn.disabled = false;
            submitBtn.textContent = 'Submit Enrollment';
        });
    });

    // --- Currency switcher code ---
    const currencyRates = {
        INR: 1,
        USD: 0.012,
        EUR: 0.011,
        GBP: 0.0095,
        AUD: 0.018,
        CAD: 0.016,
        JPY: 1.85,
        CNY: 0.086
    };

    const currencyDropdown = document.getElementById('currencyDropdown');
    if (currencyDropdown) {
        currencyDropdown.addEventListener('change', function () {
            const selected = this.options[this.selectedIndex];
            const currency = selected.value;
            const symbol = selected.getAttribute('data-symbol');
            document.querySelectorAll('.course-price').forEach(function(priceDiv) {
                const basePrice = parseFloat(priceDiv.getAttribute('data-base')) || 0;
                const rate = currencyRates[currency];
                const convertedPrice = Math.round(basePrice * rate * 100) / 100;
                priceDiv.textContent = symbol + convertedPrice.toLocaleString();
                priceDiv.setAttribute('data-currency', currency);
            });
        });
    }
});

 document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.accordion').forEach(function(btn) {
    btn.addEventListener('click', function() {
      btn.classList.toggle('active');
      var panel = btn.nextElementSibling;
      panel.style.display = panel.style.display === 'block' ? 'none' : 'block';
    });
  });
});

</script>
</article>
