<style>
@import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap');

body {
  font-family: 'Space Grotesk', sans-serif;
}

/* FULLSCREEN OVERLAY */
#mt-preloader {
  position: fixed;
  inset: 0; /* top:0; right:0; bottom:0; left:0 */
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to bottom right, #ffffff, #E0F7FA, #3EABBF);
  transition: opacity 0.5s ease;
}

/* Inner content */
.mt-preloader-inner {
  text-align: center;
    transform: translateY(-30px);  /* move up slightly; tweak value if needed */
}

.mt-preloader-logo {
  width: 110px;
  height: 110px;
  display: block;
  margin: 0 auto;

  /* spin around the sun, not the image edge */
  transform-origin: 48% 42%;  /* tweak these % if needed */
  animation: mt-rotate 6s linear infinite;
}


/* Text under logo */
.mt-preloader-text {
  margin-top: 12px;
  font-size: 0.8rem;
  letter-spacing: 0.35em;
  text-transform: uppercase;
  color: #374151; /* gray-700-ish */
}

/* Rotation animation */
@keyframes mt-rotate {
  from { transform: rotate(0deg); }
  to   { transform: rotate(360deg); }
}

</style>


