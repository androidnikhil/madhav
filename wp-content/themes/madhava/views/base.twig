<script>
  (function () {
    function hidePreloader() {
      var preloader = document.getElementById('mt-preloader');
      if (!preloader || preloader.dataset.done === '1') return;

      preloader.dataset.done = '1';
      preloader.style.opacity = '0';

      setTimeout(function () {
        if (preloader && preloader.parentNode) {
          preloader.parentNode.removeChild(preloader);
        }
      }, 500);
    }

    // Normal: when page fully loaded
    window.addEventListener('load', hidePreloader);

    // Fallback: remove after 6s even if load event is delayed
    setTimeout(hidePreloader, 6000);
  })();
</script>

