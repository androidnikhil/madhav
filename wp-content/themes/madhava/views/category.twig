{% extends "base.twig" %}

{% block content %}
<div class="container mx-auto px-4 py-10 max-w-7xl">
  <h1 class="text-3xl md:text-5xl font-extrabold text-gray-900 mb-4">
    {{ term.name }}
  </h1>
  <p class="text-gray-600 mb-8">{{ term.description }}</p>
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for post in posts %}
      <article class="bg-white rounded-lg shadow p-6">
        <a href="{{ post.link }}">
          {% if post.thumbnail.src %}
            <img src="{{ post.thumbnail.src|resize(600,400) }}" alt="{{ post.title }}" class="mb-4 rounded object-cover w-full h-40">
          {% endif %}
          <h2 class="text-xl font-bold mb-2 text-gray-900">{{ post.title }}</h2>
          <p class="text-gray-600 text-sm mb-2">{{ post.date }}</p>
          <div class="text-gray-700 text-base">{{ post.preview|striptags|truncate(100) }}</div>
        </a>
      </article>
    {% else %}
      <p>No posts found in this category.</p>
    {% endfor %}
  </div>
</div>
{% endblock %}